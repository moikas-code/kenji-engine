{
  "mcpServers": {
    "kenji-engine": {
      "command": "bun",
      "args": ["run", "mcp-server.ts"],
      "env": {
        "NODE_ENV": "development"
      }
    },

    "memory": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "env": {}
    },
    "sequential-thinking": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {}
    },
    "kb-mcp": {
      "command": "bunx",
      "args": ["kb-mcp", "serve"],
      "env": {}
    },
    "idd-mcp": {
      "command": "idd-mcp",
      "args": ["serve"],
      "env": {}
    },
    "puppeteer": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"]
    },
    "semantic-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-semantic-search"]
    },
    "context-chunker": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-context-chunker"]
    }
  }
}
